{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Compile and run FASM",
      "command": [
        "fasm.exe",
        "${file}",
        "build\\${fileBasenameNoExtension}.exe",
        "&&",
        ".",
        "build\\${fileBasenameNoExtension}.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": "**/*.asm"
      }
    },
    {
      "type": "cppbuild",
      "label": "C/C++: cl.exe build active file",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/std:c++20",
        "/nologo",
        "/Fe${workspaceFolder}\\build\\${fileBasenameNoExtension}.exe",
        "${file}"
      ],
      "options": {
        "cwd": "${workspaceFolder}\\build"
      },
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        "isDefault": "**/*.c"
      }
    }
  ]
}
